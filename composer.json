{
    "name": "ajimoti/timer",
    "description": "This is my package php-timer",
    "keywords": [
        "ajimoti",
        "php-timer"
    ],
    "homepage": "https://github.com/ajimoti/php-timer",
    "license": "MIT",
    "authors": [
        {
            "name": "ajimoti",
            "email": "ibukunajmoti@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "nesbot/carbon": "^2.55"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Ajimoti\\Timer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ajimoti\\Timer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
